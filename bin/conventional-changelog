#!/usr/bin/env php
<?php

use ConventionalChangelog\Generator;

$mainFile = __DIR__ .'/../src/Generator.php';
if(is_file($mainFile)) {
    require_once $mainFile;
}

foreach ([__DIR__ . '/../../autoload.php', __DIR__ . '/../vendor/autoload.php', __DIR__ . '/vendor/autoload.php'] as $file) {
    if (file_exists($file)) {
        require_once $file;
        break;
    }
}

$app = new Generator();
$app->run();