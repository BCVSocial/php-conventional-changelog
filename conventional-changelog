#!/usr/bin/env php
<?php

use ConventionalChangelog\DefaultCommand;
use Symfony\Component\Console\Application;

// Autoload
$files = [
    __DIR__ . '/../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php',
];
foreach ($files as $file) {
    if (file_exists($file)) {
        require_once $file;
        break;
    }
}

// Report only fatal errors
error_reporting(2039);

// Command
$config = [];
$configFile = getcwd() . '/.changelog';
if (is_file($configFile)) {
    $config = require $configFile;
}

$command = new DefaultCommand($config);
$commandName = $command->getName();

// Run application single command
$application = new Application('conventional-changelog', '1.3.0');
$application->add($command);
$application->setDefaultCommand($commandName, true);
$application->run();
